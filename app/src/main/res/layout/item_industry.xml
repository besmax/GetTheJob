<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tv_industry_name"
        style="@style/regular_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/check_box_industry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Агрохимия (производство)" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/check_box_industry"
        android:layout_width="@dimen/check_box_size"
        android:layout_height="@dimen/check_box_size"
        android:layout_marginStart="16dp"
        android:button="@drawable/industry_check_box"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_industry_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_industry_name"
        app:layout_constraintTop_toTopOf="@id/tv_industry_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
